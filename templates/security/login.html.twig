 {% extends "base.html.twig" %}
 {% block body %}
   <div class="container">
   <h1 class="mt-5">Connexion </h1>
   </div>
   <div class="container mt-3">
   <form class="form-horizontal"  action=" {{ path('security_login') }} " method="post">
        <div class="form-group">
          <label  class="control-label col-md-6">Email</label>
          <div class="col-md-6">
          <input type="email" class="form-control" name="_username"  required="" placeholder=" Entrez votre email" class="col-md-6">
          </div>
        </div>
        <div class="form-group">
          <label  class="control-label col-md-6 mt-2">Mot de passe</label>
          <div class="col-md-6">
          <input type="password" class="form-control" name="_password" required="" placeholder="Entrez votre mot de passe " class="col-md-6">
          </div>
        </div>
            
        <div class="mt-3">
            <button class="btn btn-success btn-block" type="submit" >Connexion</button>
    
         </div>

      </form>
   </div>
    <style>
 .container h1{
    font-family:bold;
    letter-spacing:0.1px;
    color:#0D7C99;

}
.btn{
    background-color:#0D7C99!important;
    border-color:#0D7C99!important;
}
</style>
 {% endblock %}